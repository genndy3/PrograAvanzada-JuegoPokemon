@model Juego_de_Pokemon.Models.Pokemon

@{
	ViewData["Title"] = "Editar Pokémon";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Juego_de_Pokemon</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
	<header>
		@if (ViewData["CuentaUsuario"] != null)
		{
			<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
				<div class="container-fluid">
					<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
						<img src="~/images/logo.png" alt="Pokedex Logo" style="height: 60px;">
					</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse">
						<ul class="navbar-nav mb-2 mb-lg-0" style="margin-left:auto;">
							<li class="nav-item">
								<a class="btn btn-primary" style="background-color: #6C86D3; border-color: #6C86D3; border-radius: 20px;" href="@Url.Action("Listar", "Usuarios")">Administrar Usuarios</a>
							</li>
							<li class="nav-item">
								<a class="btn btn-primary" style="background-color: #6C86D3; border-color:#6C86D3; border-radius: 20px;" href="@Url.Action("Listar", "Pokemon")">Administrar Pokemones</a>
							</li>
						</ul>

						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<span class="nav-link text-dark">¡Hola, @ViewData["CuentaUsuario"]!</span>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Logout">Cerrar sesión</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		}
	</header>

	<div class="container">
		<h1>Editar Pokémon</h1>

		<form asp-action="Editar" method="post">
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label for="Nombre">Nombre</label>
				<input type="text" asp-for="Nombre" class="form-control" />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="Tipo">Tipo</label>
				<input type="text" asp-for="Tipo" class="form-control" />
				<span asp-validation-for="Tipo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="Debilidad">Debilidad</label>
				<input type="text" asp-for="Debilidad" class="form-control" />
			</div>
			<div class="form-group">
				<label for="HP">HP</label>
				<input type="number" asp-for="HP" class="form-control" />
			</div>
			<div class="form-group">
				<label for="Ataque">Ataque</label>
				<input type="number" asp-for="Ataque" class="form-control" />
			</div>
			<div class="form-group">
				<label for="Defensa">Defensa</label>
				<input type="number" asp-for="Defensa" class="form-control" />
			</div>
			<div class="form-group">
				<label for="Imagen">Imagen URL</label>
				<input type="text" asp-for="Imagen" class="form-control" />
			</div>
			<button type="submit" class="btn btn-primary">Guardar Cambios</button>
			<a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
		</form>
	</div>
</body>
</html>
